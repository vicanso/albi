.btn
  position relative
  display inline-block
  padding 6px 12px
  font-weight 600
  line-height 20px
  white-space nowrap
  vertical-align middle
  cursor pointer
  user-select none
  background-color #eee
  background-image linear-gradient(#fcfcfc, #eee)
  border 1px solid #d5d5d5
  border-radius 3px
  appearance none
  box-shadow none
  &:focus, &:hover
    box-shadow none
  &.btn-primary
    color #fff
    text-shadow 0 -1px 0 rgba(0,0,0,0.15)
    background-color #60b044
    background-image linear-gradient(#8add6d, #60b044)
    border-color #5ca941
    &:hover, &:focus
      background-color #569e3d
      background-image: linear-gradient(#79d858, #569e3d)
      border-color #4a993e
  &.btn-block
    display block
    width 100%
    text-align center