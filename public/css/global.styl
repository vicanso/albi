*
  box-sizing border-box
  &:before, &:after
    box-sizing border-box
.clearfix:before, .clearfix:after
  display table
  content " "
.clearfix:after
  clear both
  
body
  font 14px 'Helvetica Neue', Helvetica, Arial, sans-serif
  line-height 1.4em
  background #f5f5f5
  color #4d4d4d
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-weight 300

input, .pure-form input[type="text"], .pure-form input[type="password"]
  font-size 13px
  border-radius 4px
  box-shadow inset 0 2px 2px #e9e9e9
  border 1px solid #aeaeae
  line-height 16px
  padding 6px 10px 5px
  &:focus
    outline none
    border-color #aeaeae
    box-shadow inset 0 2px 2px #e9e9e9, 0 0 10px 0 rgba(73, 107, 125, 0.3)

a
  color #3b8bba
  text-decoration none
  &:visited, &:hover
    color #265778
.tac
  text-align center
.pullRight
  float right
.mleft5
  margin-left 5px
.mright5
  margin-right 5px
.margin10
  margin-right 10px
  
.maskContainer
  background-color rgba(0, 0, 0, 0.8)
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  z-index 8
  
.warning
  background-color rgb(223, 117, 20)
  padding 6px 15px
  color #f0f0f0
  border-radius 3px
  .fa
    margin-right 3px
  
.dialog
  position fixed
  width 500px
  border 1px solid #c4c4c4
  left 50%
  top 50%
  margin-left -(@width / 2)
  border-radius 3px
  box-shadow inset 0 -2px 1px rgba(0,0,0,0.03)
  z-index 9
  .title
    margin 0
    background-color #f0f0f0
    border-bottom 1px solid #dadada
    line-height 2em
    padding-left 1em
    .close
      float right
      height 100%
      width 30px
      color #777
  .content
    background-color #f5f5f5
    padding 30px
    .submit
      border-radius 3px
      line-height 1.7em
      color #fff
.registerLoginDialog
  .content
    padding-bottom 10px
    input[type='text'], input[type='password']
      width 200px
    .submit
      width 150px