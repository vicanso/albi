@import './constant'

*
	box-sizing border-box
	&:before, &:after
		box-sizing border-box

body
	color #333
	font-size 16px
	line-height 1.6
	font-weight 100
	letter-spacing 0.01em
	font-family Helvetica, Arial, sans-serif
	visibility hidden

a
	color #3b8bba
	text-decoration none
	&:visited
		color #265778
		


.clearfix:before, .clearfix:after
	display table
	content " "
.clearfix:after
	clear both
		
.pageContentContainer
	margin 0
	margin-left $NAV_WIDTH
	@media (max-width:760px)
		margin-left 0