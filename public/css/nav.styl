@import './constant'

.navContainer
	width $NAV_WIDTH
	position fixed
	left 0
	top 0
	bottom 0
	background-color #191818
	overflow-y auto
	-webkit-overflow-scrolling touch
	&:after
		content ''
		position fixed
		bottom 0
		left 0
		width $NAV_WIDTH
		height 3em
		background linear-gradient(rgba(0,0,0, 0), rgba(0,0,0,1))
		pointer-events none
	a
		color #999
		display block
		white-space normal
	.logo
		font-size 125%
		letter-spacing 0.1em
		padding 0.5em 0.8em
		text-transform uppercase
		transition color 0.3s
		color #fff
		&:hover
			color #999
	ul
		margin 0
		padding 0
		border-top 1px solid #333
		ul
			text-indent 1em
		li
			list-style none
			&.selected
				> a, > a:hover
					background-color #1f8dd6
					color #fff
			a
				padding 0.625em 1em
				&:hover
					background-color #333