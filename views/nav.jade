mixin Components(items, baseUrl, selectedUrl)
	ul
		each item in items
			- var url = baseUrl + item.url;
			li(class='#{selectedUrl === url? "selected" : ""}')
				a(href=URL(url), title='#{item.name}') #{item.name}
				if item.children
					+Components(item.children, url, selectedUrl)


nav.navContainer
	a.text-center.logo(href=URL('/'), title='Albi')
		| Albi
	- var navigation = viewData.navigation;
	if navigation
		+Components(navigation.items, '', navigation.selected)

- importer.import('/css/nav.css')